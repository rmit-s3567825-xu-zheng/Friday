
<div class="properties new">
  <h2>Add New Property</h2>

  <%= form_for(:property, :url => {:action => 'create'}) do |f| %>
  	<table summary="properties form fields">
  	<tr>
  	  <th>Property name</th>
  	  <td><%= f.text_field(:name) %></td>
  	</tr>
  	<tr>
  	  <th>Owner ID</th>
  	  <td><%= f.text_field(:user_id, :value => session[:user_id], :readonly => true) %></td>
  	</tr>
    <tr>
      <th>Address</th>
      <td><%= f.text_field(:address) %></td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= f.text_field(:city) %></td>
    </tr>
  	<tr>
  	  <th>Country</th>
  	  <td><%= f.text_field(:country) %></td>
  	</tr>
  	<tr>
  	  <th>Number of rooms</th>
  	  <td><%= f.number_field(:num_rooms, in: 1..20) %></td>
  	</tr>
  	<tr>
  	  <th>Air-conditioned?</th>
  	  <td><%= f.radio_button(:ac_available, "1") %>
  	  		<%= f.label(:ac_available, "Yes") %>
  	  		<%= f.radio_button(:ac_available, "0") %>
  	  		<%= f.label(:ac_available, "No") %>
  	  </td>
  	</tr>
  	<tr>
  	  <th>Swimming Pool?</th>
  	  <td><%= f.radio_button(:pool_available, "1") %>
  	  		<%= f.label(:pool_available, "Yes") %>
  	  		<%= f.radio_button(:pool_available, "0") %>
  	  		<%= f.label(:pool_available, "No") %>
  	  </td>
  	</tr>
  	<tr>
  	  <th>Points required for reservation</th>
  	  <td><%= f.number_field(:num_points, in: 1..10000) %></td>
  	</tr>
  	<tr>
  	  <th>Discount for above three weeks</th>
  	  <td><%= f.number_field(:discount, in: 1..99, :step => "any")%> %</td>
  	</tr>


  	</table>

  	<div class="form-buttons">
  		<%= submit_tag("Add") %>
  	</div>
  <% end %>
</div>
